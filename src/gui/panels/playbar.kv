#:import utils kivy.utils

<PlayBarPanel>:
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 0.05, 0.05, 0.05
        Rectangle:
            size: self.width, self.height - 4
            pos: self.x, self.y + 2
    size_hint: 1, None
    height: '35mm'
    anchor_x: 'center'
    anchor_y: 'center'

<PlayButton>:
    background_normal: ''
    background_color: utils.get_color_from_hex('#00000000')
    size_hint: None, None
    size: '64px', '64px'
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gui/img/play_icon.png'

<PauseButton>:
    background_normal: ''
    background_color: utils.get_color_from_hex('#00000000')
    size_hint: None, None
    size: '64px', '64px'
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gui/img/pause_icon.png'