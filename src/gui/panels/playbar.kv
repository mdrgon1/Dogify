#:import utils kivy.utils

<PlayBarPanel>:
    size_hint: 1, None
    height: '35mm'
    anchor_x: 'center'
    anchor_y: 'center'

<PlayButton>:
    background_normal: ''
    background_color: utils.get_color_from_hex('#00000000')
    size_hint: None, None
    size: '64px', '64px'
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gui/img/play_icon.png'

<PauseButton>:
    background_normal: ''
    background_color: utils.get_color_from_hex('#00000000')
    size_hint: None, None
    size: '64px', '64px'
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gui/img/pause_icon.png'